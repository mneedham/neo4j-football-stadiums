%html{"ng-app" => ""}
	%head
		%title= "Football Stadiums"		
		%link(rel="stylesheet" type="text/css" href="bootstrap/css/bootstrap.css")
		%link(rel="stylesheet" type="text/css" href="bootstrap/css/bootstrap-responsive.css")
		%link(rel="stylesheet" type="text/css" href="football-stadiums.css")
		%link(rel="stylesheet" type="text/css" href="leaflet/leaflet.css")
		
		
		%script(src="jquery-1.10.1.js" type="text/javascript")
		%script(src="angular.js" type="text/javascript")
		%script(src="leaflet/leaflet-src.js" type="text/javascript")
		%script(src="stadiums.js" type="text/javascript")
		%script(src="map.js" type="text/javascript")
		%script(src="football-stadiums.js" type="text/javascript")

	%body		
		%div.container-fluid
			%h3= "UK Football Stadiums"
			%div.row
				%div.span6
					%form.form-inline#stadium-search
						%div.control-group						
							%div.controls
								%div.row-fluid
									%div.span6
										%label= "Lat/Long"
										%input#inputLatLong.input-xlarge{ :type => "Text", :placeholder => "Latitude, Longitude", :name => "latLong"}										
									%div.span3
										%label= "Distance"
										%input#inputDistance.input-small{ :type => "Text", :placeholder => "Distance", :name => "distance" }
									%div.span3
										%button{:type=> "submit", :class=>"btn btn-primary"}= "Find Stadiums"									
					%div#map				
				%div.span6.results

					